#Rewrite all urls dynamically to SSL/HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]


# Block WordPress xmlrpc.php requests
<Files xmlrpc.php>
   <IfVersion < 2.4>
      order deny,allow
      deny from all
   </IfVersion>
   <IfVersion >= 2.4>
      Require all denied
    </IfVersion>
</Files>


# Block WordPress wp-config.php requests
<Files wp-config.php>
   <IfVersion < 2.4>
      order deny,allow
      deny from all
   </IfVersion>
   <IfVersion >= 2.4>
      Require all denied
    </IfVersion>
</Files>


